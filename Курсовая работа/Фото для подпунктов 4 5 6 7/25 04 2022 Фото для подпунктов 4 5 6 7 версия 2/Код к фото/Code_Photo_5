@startuml
skinparam class {
	BackgroundColor White
	ArrowColor Black
	BorderColor Black
}
hide circle
hide methods

class Пользователь {
   ID пользователя
   ФИО
   Роль в системе
}
class Оценка {
   ID пользователя
   Предмет
   Номер теста
   Оценка
   Баллы в % за тест
}
class Персонаж {
   ID пользователя
   Уровень
   Здоровье
   Выносливость
   Внитриигровая валюта
   Основная атака
   Основная защита
   Шанс уворота
   Шанс крита
   Крит урон
   Баллов полученно
   Общее количество возможных полученных баллов
}
class Уровень {
   ID уровня
   ID пользователя
   Время прохождения
   Количество противников
   Номер группы выпадаемых предметов
   Номер группы наград в виде опыта
   Номер группы задач 
   Предмет
   Баллов в % до 3
   Баллов в % до 4
   Баллов в % до 5
}
class Задание {
   ID задания
   ID пользователя
   Предмет
   Балл за правильный ответ
   Номер группы задач
   Постановка задачи
   Вариант ответа
   Правильный ответ
}
class НаградаОпыт {
   ID награды статистики
   Номер группы наград в виде опыта
   Количество опыта 
}
class НаградаПредмет {
   ID награды предмет
   Тип награды предмет
   Номер группы выпадаемых предметов
   Выбранная характеристика
   Количество прибавляемых поинтов к характеристике
}
class Противник {
   ID противника
   Тип противника
   Уровень
   Здоровье
   Выносливость
   Основная атака
   Основная защита
   Шанс уворота
   Шанс крита
   Крит урон
   Шанс выпадения предмета
   Номер группы выпадаемых предметов
}


Пользователь *-- Оценка
Пользователь *-- Персонаж
Пользователь *-- Задание
Пользователь *-- Уровень
Пользователь *-- НаградаПредмет
Пользователь *-- Противник
Уровень *-- Задание
Уровень *-- Противник
Уровень *-- НаградаПредмет
Уровень *-- НаградаОпыт
Уровень *-- Персонаж
Персонаж *-- Оценка
@enduml
